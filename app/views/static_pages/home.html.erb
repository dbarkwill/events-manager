<div class="row justify-content-center">
  <div class="col-8">
    <h1 class="display-6 text-center">Event Check-In</h1>
  </div>
</div>
<br>
<div class="row justify-content-center align-items-center">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Please input your employee code below to continue.</h5><br>
        <%= form_with url: sessions_path do |form| %>
          <div class="form-group mb-3">
            <%= form.text_field :PIN, class:"form-control form-control-lg" %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit "Login", class:"btn btn-lg btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div
</div>
